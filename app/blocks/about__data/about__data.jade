mixin input-data(...items)
		each item in items
			div(class='item__about ' + item.nameInput)
				label(for= item.item_id class=item.labelName)= item.item_data
				input(type='text' id= item.item_id class= item.inputName)


mixin about__data()
	+b.about__data&attributes(attributes)
		+input-data({item_data:'Полное ФИО',item_id:'fio',nameInput: 'item__fullname-about',labelName: 'item__label-about item__label-fullname',inputName:'item__input-about item__input-fullname'})
		+input-data({item_data:'Год рождения',item_id:'year_birth',nameInput: 'item__birthday-about',labelName: 'item__label-about item__label-birthday',inputName:'item__input-about item__input-birthday'})
		+input-data({item_data:'Место жительства',item_id:'location',nameInput: 'item__location-about',labelName: 'item__label-about item__label-location',inputName:'item__input-about item__input-location'})
		+input-data({item_data:'Скайп',item_id:'skype',nameInput: 'item__skype-about',labelName: 'item__label-about item__label-skype',inputName:'item__input-about item__input-skype'})
		+input-data({item_data:'Почта',item_id:'email',nameInput: 'item__email-about',labelName: 'item__label-about item__label-email',inputName:'item__input-about item__input-email'})